{
  "name": "@idio/core",
  "version": "1.2.0",
  "description": "A Koa2-Based Web Server With Essential Middleware, Including Sessions, File Upload, Body Parser, CSRF Protection, Logging, Compression, Static Files And Router.",
  "main": "build",
  "scripts": {
    "t": "zoroaster -a",
    "test": "yarn t test/spec",
    "test-build": "ALAMODE_ENV=test-build yarn test",
    "d": "NODE_DEBUG=doc doc src/index.js -g",
    "lint": "eslint .",
    "doc": "NODE_DEBUG=doc doc documentary -o README.md",
    "rec": "NODE_DEBUG=appshot appshot -T 23 -a Terminal -y 150 -f",
    "e": "node example",
    "example/": "yarn e example/example.js",
    "build": "yarn-s d b doc",
    "b": "alamode src -o build -s"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/idiojs/core.git"
  },
  "keywords": [
    "core",
    "idio",
    "web",
    "app",
    "http",
    "application",
    "framework",
    "middleware",
    "compression",
    "static",
    "server",
    "serve",
    "session",
    "bodyparser",
    "json",
    "form",
    "csrf",
    "auth",
    "file upload",
    "upload",
    "files",
    "log"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/idiojs/core/issues"
  },
  "homepage": "https://github.com/idiojs/core#readme",
  "devDependencies": {
    "@wrote/read": "1.0.2",
    "alamode": "1.7.0",
    "catchment": "3.2.2",
    "documentary": "1.21.1",
    "eslint-config-artdeco": "1.0.1",
    "rqt": "3.0.4",
    "snapshot-context": "2.0.4",
    "yarn-s": "1.1.0",
    "zoroaster": "3.6.6"
  },
  "dependencies": {
    "@koa/cors": "2.2.3",
    "@types/koa": "2.0.48",
    "@types/koa-router": "7.0.39",
    "@wrote/ensure-path": "1.0.5",
    "erotic": "2.0.2",
    "koa": "2.6.2",
    "koa-bodyparser": "4.2.1",
    "koa-compose": "4.1.0",
    "koa-compress": "3.0.0",
    "koa-csrf": "3.0.7",
    "koa-logger": "3.2.0",
    "koa-mount": "4.0.0",
    "koa-multer": "1.0.2",
    "koa-router": "7.4.0",
    "koa-session": "5.10.1",
    "koa-static": "5.0.0",
    "server-destroy": "1.0.1"
  }
}
